
URxvt.font: -*-terminus-medium-r-normal-*-14-*-*-*-*-*-*-*
URxvt.boldFont: -*-terminus-bold-r-normal-*-14-*-*-*-*-*-*-*

dzen2.font:       -*-terminus-medium-r-normal-*-12-*-*-*-*-*-*-*
dzen2.foreground: #aaaaaa
dzen2.background: black

! Hide the pointer when typing (no need for unclutter)
URxvt*pointerBlank: false

URxvt.loginShell:  false
URxvt.utmpInhibit: true
URxvt.imLocale:    en_US.utf8

! No extra padding
URxvt*internalBorder: 0
URxvt*externalBorder: 0
URxvt*lineSpace:      0

URxvt*scrollBar: false
URxvt*saveLines: 12000

! Set urgent hint on a bell
! Used mostly for irc (weechat/irssi) notifications
URxvt*urgentOnBell: true

! Very vivid colours
URxvt*foreground: #ffffff
URxvt*background: #000000
*color0:  #000000
*color8:  #aaaaaa
*color1:  #aa0000
*color9:  #ff0000
*color2:  #00aa00
*color10: #00ff00
*color3:  #aaaa00
*color11: #ffff00
*color4:  #0000aa
*color12: #0000ff
*color5:  #aa00aa
*color13: #ff00ff
*color6:  #00aaaa
*color14: #00ffff
*color7:  #aaaaaa
*color15: #ffffff

URxvt.perl-ext:      default,url-select
URxvt.keysym.M-u:    perl:url-select:select_next
!URxvt.url-select.launcher:   /usr/bin/firefox -new-tab
URxvt.url-select.launcher: /home/jhawthorn/bin/open
URxvt.url-select.underline: true

URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

XDvi*Foreground:XDviblack
XDvi*Background:XDviwhite

Xft.dpi:        161
Xft.antialias:  true
Xft.hinting:    true
Xft.rgba:       rgb
Xft.hintstyle:  hintslight

URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true

